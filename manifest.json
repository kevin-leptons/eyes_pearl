{
    "name": "Eyes Pearl",
    "version": "0.1.0",
    "description": "Make every websites to monochrome mode",
    "manifest_version": 2,
    "icons": {
        "16": "img/logo16.png",
        "32": "img/logo32.png",
        "48": "img/logo48.png",
        "128": "img/logo128.png"
    },
    "background": {
        "scripts": ["js/shared.js", "js/background.js"],
        "persistent": false
    },
    "permissions": [
        "declarativeContent",
        "storage",
        "tabs",
        "notifications",
        "chrome://newtab/",
        "*://*/*"
    ],
    "options_page": "option.html",
    "browser_action": {
    },
    "web_accessible_resources": [
        "css/content.css"
    ]
}
